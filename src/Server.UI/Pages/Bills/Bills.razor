@page "/pages/bills"

@using CleanArchitecture.Blazor.Application.Features.Bills.Caching
@using CleanArchitecture.Blazor.Application.Features.Bills.Commands.AddEdit
@using CleanArchitecture.Blazor.Application.Features.Bills.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Bills.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.Bills.DTOs
@using CleanArchitecture.Blazor.Application.Features.Bills.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Bills.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Bills.Specifications
@using CleanArchitecture.Blazor.Server.UI.Pages.Bills.Components

@inject IStringLocalizer<Bills> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.Bills.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
             FixedHeader="true"
             FixedFooter="false"
             Virtualize="false"
             @bind-RowsPerPage="_defaultPageSize"
             Loading="@_loading"
             MultiSelection="true"
             T="BillDto"
             SelectOnRowClick="false"
             RowClick="@(s=>OnDataGridRowClick(s.Item))"
             @bind-SelectedItems="_selectedBills"
             Hover="true" @ref="_billsGrid">
    <ToolBarContent>
        <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.RequestQuote" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedBills.Count != 1)" OnClick="OnClone">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedBills.Count > 0))"
                                         OnClick="OnDeleteSelected">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_query.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
    </ToolBarContent>
    <Columns>
        <SelectColumn ShowInFooter="false"></SelectColumn>
        <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
            <CellTemplate>
                @if (_accessRights.Edit || _accessRights.Delete)
                {
                    <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Outlined" Size="Size.Small"
                             Dense="true"
                             EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                        @if (_accessRights.Edit)
                        {
                            <MudMenuItem OnClick="@(()=>OnEdit(context.Item))">@ConstantString.Edit</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem OnClick="@(()=>OnDelete(context.Item))">@ConstantString.Delete</MudMenuItem>
                        }
                    </MudMenu>
                }
                else
                {
                    <MudTooltip Text="@ConstantString.NoAllowed" Delay="300">
                        <MudIconButton Variant="Variant.Outlined"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                        </MudIconButton>
                    </MudTooltip>
                }
            </CellTemplate>
        </TemplateColumn>
        <PropertyColumn Property="x => x.VendorId" Title="@L[_dto.GetMemberDescription(x=>x.VendorId)]" />
        <PropertyColumn Property="x => x.BillDate" Title="@L[_dto.GetMemberDescription(x=>x.BillDate)]" />
        <PropertyColumn Property="x => x.DueDate" Title="@L[_dto.GetMemberDescription(x=>x.DueDate)]" />
        <PropertyColumn Property="x => x.TotalAmount" Title="@L[_dto.GetMemberDescription(x=>x.TotalAmount)]" Format="C" />
        <PropertyColumn Property="x => x.Status" Title="@L[_dto.GetMemberDescription(x=>x.Status)]">
            <CellTemplate>
                <MudChip Size="Size.Small" Color="@GetStatusColor(context.Item.Status)">
                    @context.Item.Status.ToString()
                </MudChip>
            </CellTemplate>
        </PropertyColumn>
    </Columns>
    <NoRecordsContent>
        <MudText>@ConstantString.NoRecords</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@ConstantString.Loading</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager T="BillDto" />
    </PagerContent>
</MudDataGrid>

@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<BillDto> _selectedBills = new HashSet<BillDto>();
    private MudDataGrid<BillDto> _billsGrid = default!;
    private BillDto _dto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }

    private BillsWithPaginationQuery _query { get; set; } = new();
    private BillsAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_dto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<BillsAccessRights>(); 
    }

    private Color GetStatusColor(BillStatus status)
    {
        return status switch
        {
            BillStatus.Open => Color.Warning,
            BillStatus.Paid => Color.Success,
            BillStatus.Overdue => Color.Error,
            _ => Color.Default
        };
    }
     
    private async Task<GridData<BillDto>> ServerReload(GridState<BillDto> state)
    {
        try
        {
            _loading = true;
            _query.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _query.OrderBy = sortDefinition?.SortBy ?? "Id";
            _query.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _query.PageNumber = state.Page + 1;
            _query.PageSize = state.PageSize;
            var result = await Mediator.Send(_query).ConfigureAwait(false);
            return new GridData<BillDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnSearch(string text)
    {
        _selectedBills.Clear();
        _query.Keyword = text;
        await _billsGrid.ReloadServerData();
    }

    private async Task OnRefresh()
    {
        BillCacheKey.Refresh();
        _selectedBills.Clear();
        _query.Keyword = string.Empty;
        await _billsGrid.ReloadServerData();
    }

    private Task ShowEditFormDialog(string title, AddEditBillCommand command)
    {
        return DialogServiceHelper.ShowFormDialogAsync<BillFormDialog, AddEditBillCommand>(
            title,
            command,
            async () =>
            {
                await _billsGrid.ReloadServerData();
                _selectedBills.Clear();
            });
    }

    private void OnDataGridRowClick(BillDto dto)
    {
        Navigation.NavigateTo($"/pages/bills/view/{dto.Id}");
    }

    private Task OnCreate()
    {
        var command = new AddEditBillCommand();
        return ShowEditFormDialog(L["New Bill"], command);
    }

    private Task OnClone()
    {
        var dto = _selectedBills.First();
        var command = new AddEditBillCommand()
        {
            VendorId = dto.VendorId,
            BillDate = dto.BillDate,
            DueDate = dto.DueDate,
            TotalAmount = dto.TotalAmount,
            Status = BillStatus.Open
        };
        return ShowEditFormDialog(L["Clone Bill"], command);
    }

    private Task OnEdit(BillDto dto)
    {
        Navigation.NavigateTo($"/pages/bills/edit/{dto.Id}");
        return Task.CompletedTask;
    }

    private Task OnDelete(BillDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Id);
        var command = new DeleteBillCommand(new string[] { dto.Id });
        return DeleteInternal(command, contentText); 
    }

    private Task OnDeleteSelected()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedBills.Count);
        var command = new DeleteBillCommand(_selectedBills.Select(x => x.Id).ToArray());
        return DeleteInternal(command, contentText);
    }

    private Task DeleteInternal(DeleteBillCommand command, string contentText)
    {
        return DialogServiceHelper.ShowDeleteConfirmationDialogAsync(
            command,
            ConstantString.DeleteConfirmationTitle,
            contentText,
            async () =>
            {
                await _billsGrid.ReloadServerData();
                _selectedBills.Clear();
            });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportBillsQuery()
        {
            Keyword = _query.Keyword,
            CurrentUser = UserProfile,
            OrderBy = _billsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
            SortDirection = (_billsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
        };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                if (result.Data != null)
                {
                    await BlazorDownloadFileService.DownloadFileAsync($"{L["Bills"]}.xlsx", result.Data, contentType:"application/octet-stream");
                    Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
                }
                else
                {
                    Snackbar.Add("Export failed", MudBlazor.Severity.Error);
                }
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }

    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportBillsCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _billsGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }
}
