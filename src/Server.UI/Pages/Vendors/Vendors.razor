@page "/pages/vendors"

@using CleanArchitecture.Blazor.Application.Features.Vendors.Caching
@using CleanArchitecture.Blazor.Application.Features.Vendors.Commands.AddEdit
@using CleanArchitecture.Blazor.Application.Features.Vendors.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Vendors.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.Vendors.DTOs
@using CleanArchitecture.Blazor.Application.Features.Vendors.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Vendors.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Vendors.Specifications
@using CleanArchitecture.Blazor.Server.UI.Pages.Vendors.Components

@inject IStringLocalizer<Vendors> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.Vendors.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
             FixedHeader="true"
             FixedFooter="false"
             Virtualize="false"
             @bind-RowsPerPage="_defaultPageSize"
             Loading="@_loading"
             MultiSelection="true"
             T="VendorDto"
             SelectOnRowClick="false"
             RowClick="@(s=>OnDataGridRowClick(s.Item))"
             @bind-SelectedItems="_selectedVendors"
             Hover="true" @ref="_vendorsGrid">
    <ToolBarContent>
        <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedVendors.Count != 1)" OnClick="OnClone">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedVendors.Count > 0))"
                                         OnClick="OnDeleteSelected">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_query.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
    </ToolBarContent>
    <Columns>
        <SelectColumn ShowInFooter="false"></SelectColumn>
        <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
            <CellTemplate>
                @if (_accessRights.Edit || _accessRights.Delete)
                {
                    <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Outlined" Size="Size.Small"
                             Dense="true"
                             EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                        @if (_accessRights.Edit)
                        {
                            <MudMenuItem OnClick="@(()=>OnEdit(context.Item))">@ConstantString.Edit</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem OnClick="@(()=>OnDelete(context.Item))">@ConstantString.Delete</MudMenuItem>
                        }
                    </MudMenu>
                }
                else
                {
                    <MudTooltip Text="@ConstantString.NoAllowed" Delay="300">
                        <MudIconButton Variant="Variant.Outlined"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                        </MudIconButton>
                    </MudTooltip>
                }
            </CellTemplate>
        </TemplateColumn>
        <PropertyColumn Property="x => x.Name" Title="@L[_dto.GetMemberDescription(x=>x.Name)]"> 
            <CellTemplate>
                <div class="d-flex flex-column">
                    <MudText Typo="Typo.body1">@context.Item.Name</MudText>
                    <MudText Typo="Typo.body2" Class="mud-text-secondary">@context.Item.Description</MudText>
                </div>
            </CellTemplate>
        </PropertyColumn>
        <PropertyColumn Property="x => x.Email" Title="@L[_dto.GetMemberDescription(x=>x.Email)]" />
        <PropertyColumn Property="x => x.PhoneNumber" Title="@L[_dto.GetMemberDescription(x=>x.PhoneNumber)]" />
        <PropertyColumn Property="x => x.Country" Title="@L[_dto.GetMemberDescription(x=>x.Country)]" />
    </Columns>
    <NoRecordsContent>
        <MudText>@ConstantString.NoRecords</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@ConstantString.Loading</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager T="VendorDto" />
    </PagerContent>
</MudDataGrid>

@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<VendorDto> _selectedVendors = new HashSet<VendorDto>();
    private MudDataGrid<VendorDto> _vendorsGrid = default!;
    private VendorDto _dto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }

    private VendorsWithPaginationQuery _query { get; set; } = new();
    private VendorsAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_dto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<VendorsAccessRights>(); 
    }
     
    private async Task<GridData<VendorDto>> ServerReload(GridState<VendorDto> state)
    {
        try
        {
            _loading = true;
            _query.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _query.OrderBy = sortDefinition?.SortBy ?? "Id";
            _query.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _query.PageNumber = state.Page + 1;
            _query.PageSize = state.PageSize;
            var result = await Mediator.Send(_query).ConfigureAwait(false);
            return new GridData<VendorDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnSearch(string text)
    {
        _selectedVendors.Clear();
        _query.Keyword = text;
        await _vendorsGrid.ReloadServerData();
    }

    private async Task OnRefresh()
    {
        VendorCacheKey.Refresh();
        _selectedVendors.Clear();
        _query.Keyword = string.Empty;
        await _vendorsGrid.ReloadServerData();
    }

    private Task ShowEditFormDialog(string title, AddEditVendorCommand command)
    {
        return DialogServiceHelper.ShowFormDialogAsync<VendorFormDialog, AddEditVendorCommand>(
            title,
            command,
            async () =>
            {
                await _vendorsGrid.ReloadServerData();
                _selectedVendors.Clear();
            });
    }

    private void OnDataGridRowClick(VendorDto dto)
    {
        Navigation.NavigateTo($"/pages/vendors/view/{dto.Id}");
    }

    private Task OnCreate()
    {
        var command = new AddEditVendorCommand();
        return ShowEditFormDialog(L["New Vendor"], command);
    }

    private Task OnClone()
    {
        var dto = _selectedVendors.First();
        var command = new AddEditVendorCommand()
        {
            Name = dto.Name,
            Description = dto.Description,
            Email = dto.Email,
            PhoneNumber = dto.PhoneNumber,
            Country = dto.Country
        };
        return ShowEditFormDialog(L["Clone Vendor"], command);
    }

    private Task OnEdit(VendorDto dto)
    {
        Navigation.NavigateTo($"/pages/vendors/edit/{dto.Id}");
        return Task.CompletedTask;
    }

    private Task OnDelete(VendorDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteVendorCommand(new string[] { dto.Id });
        return DeleteInternal(command, contentText); 
    }

    private Task OnDeleteSelected()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedVendors.Count);
        var command = new DeleteVendorCommand(_selectedVendors.Select(x => x.Id).ToArray());
        return DeleteInternal(command, contentText);
    }

    private Task DeleteInternal(DeleteVendorCommand command, string contentText)
    {
        return DialogServiceHelper.ShowDeleteConfirmationDialogAsync(
            command,
            ConstantString.DeleteConfirmationTitle,
            contentText,
            async () =>
            {
                await _vendorsGrid.ReloadServerData();
                _selectedVendors.Clear();
            });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportVendorsQuery()
        {
            Keyword = _query.Keyword,
            CurrentUser = UserProfile,
            OrderBy = _vendorsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
            SortDirection = (_vendorsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
        };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                if (result.Data != null)
                {
                    await BlazorDownloadFileService.DownloadFileAsync($"{L["Vendors"]}.xlsx", result.Data, contentType:"application/octet-stream");
                    Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
                }
                else
                {
                    Snackbar.Add("Export failed", MudBlazor.Severity.Error);
                }
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }

    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportVendorsCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _vendorsGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }
}
