@page "/pages/payments"

@using CleanArchitecture.Blazor.Application.Features.Payments.Caching
@using CleanArchitecture.Blazor.Application.Features.Payments.Commands.AddEdit
@using CleanArchitecture.Blazor.Application.Features.Payments.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Payments.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.Payments.DTOs
@using CleanArchitecture.Blazor.Application.Features.Payments.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Payments.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Payments.Specifications
@using CleanArchitecture.Blazor.Server.UI.Pages.Payments.Components

@inject IStringLocalizer<Payments> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.Payments.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
             FixedHeader="true"
             FixedFooter="false"
             Virtualize="false"
             @bind-RowsPerPage="_defaultPageSize"
             Loading="@_loading"
             MultiSelection="true"
             T="PaymentDto"
             SelectOnRowClick="false"
             RowClick="@(s=>OnDataGridRowClick(s.Item))"
             @bind-SelectedItems="_selectedPayments"
             Hover="true" @ref="_paymentsGrid">
    <ToolBarContent>
        <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Payment" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedPayments.Count != 1)" OnClick="OnClone">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedPayments.Count > 0))"
                                         OnClick="OnDeleteSelected">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_query.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
    </ToolBarContent>
    <Columns>
        <SelectColumn ShowInFooter="false"></SelectColumn>
        <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
            <CellTemplate>
                @if (_accessRights.Edit || _accessRights.Delete)
                {
                    <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Outlined" Size="Size.Small"
                             Dense="true"
                             EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                        @if (_accessRights.Edit)
                        {
                            <MudMenuItem OnClick="@(()=>OnEdit(context.Item))">@ConstantString.Edit</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem OnClick="@(()=>OnDelete(context.Item))">@ConstantString.Delete</MudMenuItem>
                        }
                    </MudMenu>
                }
                else
                {
                    <MudTooltip Text="@ConstantString.NoAllowed" Delay="300">
                        <MudIconButton Variant="Variant.Outlined"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                        </MudIconButton>
                    </MudTooltip>
                }
            </CellTemplate>
        </TemplateColumn>
        <PropertyColumn Property="x => x.CustomerId" Title="@L[_dto.GetMemberDescription(x=>x.CustomerId)]" />
        <PropertyColumn Property="x => x.PaymentDate" Title="@L[_dto.GetMemberDescription(x=>x.PaymentDate)]" />
        <PropertyColumn Property="x => x.Amount" Title="@L[_dto.GetMemberDescription(x=>x.Amount)]" Format="C" />
        <PropertyColumn Property="x => x.PaymentMethod" Title="@L[_dto.GetMemberDescription(x=>x.PaymentMethod)]">
            <CellTemplate>
                <MudChip Size="Size.Small" Color="@GetPaymentMethodColor(context.Item.PaymentMethod)">
                    @context.Item.PaymentMethod.ToString()
                </MudChip>
            </CellTemplate>
        </PropertyColumn>
        <PropertyColumn Property="x => x.ReferenceNumber" Title="@L[_dto.GetMemberDescription(x=>x.ReferenceNumber)]" />
    </Columns>
    <NoRecordsContent>
        <MudText>@ConstantString.NoRecords</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@ConstantString.Loading</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager T="PaymentDto" />
    </PagerContent>
</MudDataGrid>

@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<PaymentDto> _selectedPayments = new HashSet<PaymentDto>();
    private MudDataGrid<PaymentDto> _paymentsGrid = default!;
    private PaymentDto _dto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }

    private PaymentsWithPaginationQuery _query { get; set; } = new();
    private PaymentsAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_dto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<PaymentsAccessRights>(); 
    }

    private Color GetPaymentMethodColor(PaymentMethod method)
    {
        return method switch
        {
            PaymentMethod.Cash => Color.Success,
            PaymentMethod.CreditCard => Color.Info,
            PaymentMethod.BankTransfer => Color.Primary,
            _ => Color.Default
        };
    }
     
    private async Task<GridData<PaymentDto>> ServerReload(GridState<PaymentDto> state)
    {
        try
        {
            _loading = true;
            _query.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _query.OrderBy = sortDefinition?.SortBy ?? "Id";
            _query.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _query.PageNumber = state.Page + 1;
            _query.PageSize = state.PageSize;
            var result = await Mediator.Send(_query).ConfigureAwait(false);
            return new GridData<PaymentDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnSearch(string text)
    {
        _selectedPayments.Clear();
        _query.Keyword = text;
        await _paymentsGrid.ReloadServerData();
    }

    private async Task OnRefresh()
    {
        PaymentCacheKey.Refresh();
        _selectedPayments.Clear();
        _query.Keyword = string.Empty;
        await _paymentsGrid.ReloadServerData();
    }

    private Task ShowEditFormDialog(string title, AddEditPaymentCommand command)
    {
        return DialogServiceHelper.ShowFormDialogAsync<PaymentFormDialog, AddEditPaymentCommand>(
            title,
            command,
            async () =>
            {
                await _paymentsGrid.ReloadServerData();
                _selectedPayments.Clear();
            });
    }

    private void OnDataGridRowClick(PaymentDto dto)
    {
        Navigation.NavigateTo($"/pages/payments/view/{dto.Id}");
    }

    private Task OnCreate()
    {
        var command = new AddEditPaymentCommand();
        return ShowEditFormDialog(L["New Payment"], command);
    }

    private Task OnClone()
    {
        var dto = _selectedPayments.First();
        var command = new AddEditPaymentCommand()
        {
            CustomerId = dto.CustomerId,
            PaymentDate = dto.PaymentDate,
            Amount = dto.Amount,
            PaymentMethod = dto.PaymentMethod,
            ReferenceNumber = dto.ReferenceNumber
        };
        return ShowEditFormDialog(L["Clone Payment"], command);
    }

    private Task OnEdit(PaymentDto dto)
    {
        Navigation.NavigateTo($"/pages/payments/edit/{dto.Id}");
        return Task.CompletedTask;
    }

    private Task OnDelete(PaymentDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.ReferenceNumber);
        var command = new DeletePaymentCommand(new string[] { dto.Id });
        return DeleteInternal(command, contentText); 
    }

    private Task OnDeleteSelected()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedPayments.Count);
        var command = new DeletePaymentCommand(_selectedPayments.Select(x => x.Id).ToArray());
        return DeleteInternal(command, contentText);
    }

    private Task DeleteInternal(DeletePaymentCommand command, string contentText)
    {
        return DialogServiceHelper.ShowDeleteConfirmationDialogAsync(
            command,
            ConstantString.DeleteConfirmationTitle,
            contentText,
            async () =>
            {
                await _paymentsGrid.ReloadServerData();
                _selectedPayments.Clear();
            });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportPaymentsQuery()
        {
            Keyword = _query.Keyword,
            CurrentUser = UserProfile,
            OrderBy = _paymentsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
            SortDirection = (_paymentsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
        };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                if (result.Data != null)
                {
                    await BlazorDownloadFileService.DownloadFileAsync($"{L["Payments"]}.xlsx", result.Data, contentType:"application/octet-stream");
                    Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
                }
                else
                {
                    Snackbar.Add("Export failed", MudBlazor.Severity.Error);
                }
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }

    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportPaymentsCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _paymentsGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }
}
